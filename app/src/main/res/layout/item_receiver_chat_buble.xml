<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_3sdp"
    android:paddingHorizontal="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/messageTxt"
        android:layout_width="wrap_content"
        android:text="Salom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxWidth="@dimen/_250sdp"
        android:background="@drawable/bg_receiver_chat"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_7sdp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/timeMessageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:51"
        android:textSize="@dimen/_7ssp"
        app:layout_constraintStart_toStartOf="@+id/messageTxt"
        app:layout_constraintTop_toBottomOf="@+id/messageTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>